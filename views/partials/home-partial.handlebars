<!--Homepage-->
<div class="container">
    <div class="col-md-12">
            {{#each dbArticle}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <img src={{this.img}} alt="image">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-info saved-btn" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
    </div>
</div>